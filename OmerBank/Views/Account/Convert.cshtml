@model Account;

<h3>Güncel döviz kuru:</h3>
<p>Euro:@ViewBag.EUR USD:@ViewBag.USD</p>
<h2>Para Dönüştürme</h2>

<form method="post">
    <div class="form-group">
        <label for="name" class="control-label">Çevirmek istediğiniz para birimini seçiniz</label>
        <select id="name" name="name" class="form-control">
            <option value="">Bir birim seçin</option>
            @foreach (var kind in Model.Kinds)
            {
                <option value="@kind.Name">@kind.Name</option>
            }
        </select>
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="convertName" class="control-label">Hedef para birimini seçiniz</label>
        <select id="convertName" name="convertName" class="form-control">
            <option value="DOLAR">DOLAR</option>
            <option value="EURO">EURO</option>
            <option value="TL">TL</option>
        </select>
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="amount" class="control-label">Dönüştürmek istediğiniz miktarı giriniz</label>
        <input id="amount" name="amount" class="form-control" />
        <span class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Dönüştür" class="btn btn-primary" />
    </div>
</form>
