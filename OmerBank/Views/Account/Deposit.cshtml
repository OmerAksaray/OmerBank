@model Account


<h2>Para Çekme</h2>

<form method="post">
    <div class="form-group">
        <label for="name" class="control-label">Yatırmak istediğiniz para birimini seçiniz</label>
        <select id="name" name="name" class="form-control">
            <option value="">Bir para birimi seçin</option>
            @foreach (var kind in Model.Kinds)
            {
                <option value="@kind.Name">@kind.Name</option>
            }
        </select>
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="amount" class="control-label">Yatırmak istediğiniz miktarı giriniz</label>
        <input id="amount" name="amount" class="form-control" />
        <span class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Yatır" class="btn btn-primary" />
    </div>
</form>
